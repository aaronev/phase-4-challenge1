<!DOCTYPE html
<% include ./partials/header %>
<div class ="users-page">
  <div class="user-block">
    <img width="150" height="150" src=<%= user.image %> />
    <div class="text-left user-info">
      <h2><%= user.name %></h2>
      <h4> Email: <%= user.email %> </h4>
      <h5> Joined:  <%= user.timestamp %> </h5>
     </div>
  </div>
  <h2>Reviews</h2>
  <div class="reviews">
    <% reviews.forEach(function(review) { %>
      <div class="review">
        <% albums.forEach(function(album) { %>
          <% if (album.id === review.album_id) { %>
           <h3 class="title"><a href="/albums/<%= album.id %>"><%= album.title %></a></h3>
          <% } %>
        <% }) %>
        <% include ./reviews/review%>
      </div>
    <% }) %>
  </div>
</div>
<% include ./partials/footer %>